generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MediaItem {
  id            String   @id @default(cuid())
  relPath       String   @unique
  filename      String
  ext           String
  mediaType     String
  sizeBytes     BigInt
  modifiedMs    BigInt
  hasFunscript  Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  playbacks     PlaybackState[]
}

model PlaybackState {
  id          String   @id @default(cuid())
  clientId    String
  mediaId     String
  timeMs      Int
  fps         Int      @default(30)
  frame       Int
  updatedAt   DateTime @updatedAt

  media       MediaItem @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@unique([clientId, mediaId])
}
